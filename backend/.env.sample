# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=credibot_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Test Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=credibot_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=credibot-api
JWT_AUDIENCE=credibot-users
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_DURATION=86400000
SESSION_EXTEND_DURATION=3600000

# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_GENERAL_WINDOW_MS=60000
RATE_LIMIT_GENERAL_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Plaid Configuration (Optional - for future integration)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# SendGrid Configuration (Optional - for future integration)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@credibot.com

# RecEngine ML Service Configuration (Optional - for future integration)
RECENGINE_API_URL=http://localhost:5000
RECENGINE_API_KEY=your-recengine-api-key
RECENGINE_TIMEOUT=30000

# Security Configuration
HELMET_ENABLED=true
TRUST_PROXY=false

# Application Configuration
APP_NAME=CrediBot
APP_VERSION=1.0.0
APP_DESCRIPTION=Credit Card Recommendation System

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_MORGAN_LOGGING=true
ENABLE_DETAILED_ERRORS=true

# Production Configuration (Override in production)
# JWT_SECRET=your-production-jwt-secret-minimum-256-bits
# SESSION_SECRET=your-production-session-secret-minimum-256-bits
# ENABLE_DETAILED_ERRORS=false
# LOG_LEVEL=info
# NODE_ENV=production
# TRUST_PROXY=true
# CORS_ORIGIN=https://yourdomain.com